# === Required (Owner's keys) ===
ANTHROPIC_API_KEY=sk-ant-...
PERPLEXITY_API_KEY=pplx-...

# Twitter Developer Credentials (for owner to post tweets)
TWITTER_API_KEY=your_consumer_key
TWITTER_API_SECRET=your_consumer_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret

# === Required for Multi-User Login ===
# Get from developer.x.com → Your App → Settings → OAuth 2.0
TWITTER_CLIENT_ID=your_oauth2_client_id
TWITTER_CLIENT_SECRET=your_oauth2_client_secret
# For local dev: http://localhost:8000/auth/callback
# For production: https://twitter.dagent.shop/auth/callback
TWITTER_REDIRECT_URI=https://twitter.dagent.shop/auth/callback

# === Security ===
OWNER_PASSWORD=your_secure_password  # Required for owner-login (disabled if empty)

# === Optional ===
# SECRET_KEY=your_random_secret_for_sessions
